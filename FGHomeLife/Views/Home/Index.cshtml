@{
    ViewData["Title"] = "Anasayfa";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0" data-aos="fade-right">
                <h1 class="hero-title gradient-text">Özel Anlarınızı Çiçeklerle Süsleyin</h1>
                <p class="lead">Sevdiklerinize özel tasarlanmış çiçekler ve hediyelerle unutulmaz anlar yaşatın.</p>
                <div class="d-flex gap-3">
                    <a href="/cicekler" class="btn btn-hero btn-modern">
                        <i class="fas fa-seedling me-2"></i>Hemen Keşfet
                    </a>
                    <a href="/iletisim" class="btn btn-outline-dark rounded-pill btn-modern">
                        <i class="fas fa-phone me-2"></i>Bize Ulaşın
                    </a>
                </div>
            </div>
            <div class="col-lg-6" data-aos="fade-left">
                <div class="position-relative img-hover-zoom">
                    <img src="https://via.placeholder.com/800x600/FFF5F7/FF69B4?text=Bloom+%26+Gifts" alt="Çiçek Buketi" class="img-fluid rounded-4 shadow-lg">
                    <div class="position-absolute bottom-0 end-0 bg-white p-3 rounded-4 shadow-lg m-3" data-aos="fade-up" data-aos-delay="200">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-truck text-primary fs-4 me-2"></i>
                            <div>
                                <h6 class="mb-0">Ücretsiz Teslimat</h6>
                                <small class="text-muted">150₺ üzeri siparişlerde</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Kategoriler -->
<section class="container mb-5">
    <h2 class="section-title" data-aos="fade-up">Kategoriler</h2>
    <div class="row g-4">
        <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
            <div class="card text-center h-100 hover-float">
                <div class="card-body">
                    <i class="fas fa-heart text-primary mb-3" style="font-size: 2rem;"></i>
                    <h5 class="card-title">Sevgiliye Çiçekler</h5>
                    <p class="card-text">Aşkınızı ifade eden özel tasarımlar</p>
                    <a href="#" class="btn btn-outline-primary rounded-pill btn-modern">Keşfet</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="fas fa-gift text-primary mb-3" style="font-size: 2rem;"></i>
                    <h5 class="card-title">Doğum Günü</h5>
                    <p class="card-text">Özel günler için özel hediyeler</p>
                    <a href="#" class="btn btn-outline-primary rounded-pill">Keşfet</a>
                </div>
            </div>
        </div>
        <!-- Diğer kategoriler... -->
    </div>
</section>

<!-- Öne Çıkan Ürünler -->
<section class="container mb-5">
    <h2 class="section-title">Öne Çıkan Ürünler</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="position-relative">
                    <img src="https://via.placeholder.com/400x300/FFF5F7/FF69B4?text=Ürün" class="card-img-top" alt="Ürün">
                    <span class="position-absolute top-0 end-0 badge bg-primary m-3">Yeni</span>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Pembe Güller</h5>
                    <p class="card-text">Özel günler için hazırlanmış taze güller</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="h5 mb-0">249.99₺</span>
                        <a href="#" class="btn btn-outline-primary rounded-pill">
                            <i class="fas fa-shopping-cart me-2"></i>Sepete Ekle
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Diğer ürünler... -->
    </div>
</section>

<!-- Blog Section -->
<section class="container mb-5">
    <h2 class="section-title">Blog Yazıları</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100">
                <img src="https://via.placeholder.com/400x300/FFF5F7/FF69B4?text=Blog" class="card-img-top" alt="Blog">
                <div class="card-body">
                    <div class="mb-2">
                        <span class="badge bg-light text-dark">
                            <i class="fas fa-calendar-alt me-1"></i>23 Mart 2024
                        </span>
                    </div>
                    <h5 class="card-title">Çiçek Bakımı İpuçları</h5>
                    <p class="card-text">Çiçeklerinizin daha uzun süre canlı kalması için öneriler...</p>
                    <a href="#" class="btn btn-link text-primary p-0">
                        Devamını Oku <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <!-- Diğer blog kartları... -->
    </div>
</section>

<!-- Newsletter Section -->
<section class="bg-light py-5 mb-5" data-aos="fade-up">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-6">
                <h3 class="mb-4 gradient-text">Yeniliklerden Haberdar Olun</h3>
                <p class="text-muted mb-4">En yeni ürünlerimiz ve kampanyalarımızdan ilk siz haberdar olun!</p>
                <div class="input-group mb-3">
                    <input type="email" class="form-control newsletter-input" placeholder="E-posta adresiniz">
                    <button class="btn btn-primary btn-modern rounded-pill px-4" type="button">
                        <i class="fas fa-paper-plane me-2"></i>Abone Ol
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Scroll to Top Button -->
<div class="scroll-top">
    <i class="fas fa-arrow-up"></i>
</div> 